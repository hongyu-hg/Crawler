           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:crawler.properties"></property>
	</bean>
	<bean id="taskCenter" class="com.hg.crawler.levels.TaskCenter">
		<property name="threadSize" value="3" />
		<property name="useNewFile" value="true" />
		<property name="testing" value="false"></property>
		<property name="testingSize" value="1" />
		<property name="taskList">
			<list>
				<ref bean="level_1" />
				<ref bean="level_2" />
				<ref bean="level_3" />
				<ref bean="level_4" />
			</list>
		</property>
	</bean>

	<bean id="level_1" class="com.hg.crawler.levels.TaskPoolImpl">
		<property name="inputFilePath" value="${work.folder.adeaz}/ehow/level_0.txt" />
		<property name="outputFilePath" value="${work.folder.adeaz}/ehow/level_1.txt" />
		<property name="columnTitle" value="SiteMapLink" />
		<property name="newClumnNames" value="Level1CategoryName\tLevel1CategoryLink" />
		<property name="task">
			<bean class="com.hg.crawler.PageFetcher">
				<property name="parentXpath">
					<bean class="com.hg.crawler.xpath.Xpath">
						<property name="xpathString">
							<value><![CDATA[//div[@class="links"]//a]]></value>
						</property>
					</bean>
				</property>
				<property name="childXpathList">
					<list>
						<bean class="com.hg.crawler.xpath.Xpath">
							<property name="xpathString">
								<value><![CDATA[text()]]></value>
							</property>
						</bean>
						<bean class="com.hg.crawler.xpath.Xpath">
							<property name="xpathString">
								<value><![CDATA[@href]]></value>
							</property>
							<property name="postProcessing">
								<list>
									<bean class="com.hg.crawler.xpath.ElementLink"></bean>
								</list>
							</property>
						</bean>
					</list>
				</property>
			</bean>
		</property>
	</bean>

